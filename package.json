{
  "name": "commander-gulp-mailing",
  "description": "Compilación de mailings dinámicamente",
  "version": "1.0.5",
  "main": "./bin/mailing.js",
  "author": "Jesús Antonio Ugaz Vegas",
  "homepage": "https://github.com/jugaz/commander-gulp-mailing#readme",
  "license": "MIT",
  "bin": {
    "commander-gulp-mailing": "./bin/mailing.js"
  },
  "dependencies": {
    "autoprefixer": "^9.8.6",
    "chalk": "^4.1.0",
    "commander": "^3.0.2",
    "figlet": "^1.5.0",
    "graceful-fs": "^4.2.4",
    "gulp": "^4.0.2",
    "gulp-debug": "^4.0.0",
    "gulp-inline-css": "^4.0.0",
    "gulp-postcss": "^9.0.0",
    "gulp-pug": "^4.0.1",
    "gulp-util": "^3.0.8"
  },
  "scripts": {
    "deploy": "npm run templates && npm run styles && npm run images && npm run svg && gulp scripts",
    "images": "commander-gulp-images images \"frontend/src/static/images/**/*.png\" \"frontend/src/static/images/**/*.jpg\" --im \"docs/images\"",
    "mailing": "node ./bin/mailing.js mailing \"frontend/src/mail/**/*.pug\" \"frontend/src/mail/*.pug\" --m \"docs/\"",
    "predeploy": "rm -rdf \"docs/\" && mkdir -p \"docs/\"",
    "preinstall": "node ./bin/pre-cli-mailing.js",
    "server": "commander-gulp-server server \"8000\" --ser \"docs/\"",
    "scss": "node ./bin/mailing.js scss \"frontend/src/static/styles/*.scss\" \"frontend/src/static/styles/**/*.scss\" --sc \"docs/styles/\"",
    "styl": "node ./bin/mailing.js stylus \"frontend/src/static/styles/*.styl\" \"frontend/src/static/styles/**/*.styl\" --st \"docs/styles/\"",
    "less": "node ./bin/mailing.js stylus \"frontend/src/static/styles/*.styl\" \"frontend/src/static/styles/**/*.styl\" --st \"docs/styles/\"",
    "svg": "commander-gulp-images svg \"frontend/src/static/images/**/*.svg\" --sv \"docs/images/\"",
    "templates": "commander-gulp-templates templates \"frontend/src/templates/*.pug\" \"frontend/src/templates/**/*.pug\" --t \"docs/\"",
    "watch": "npm run watch-templates watch-styles",
    "watch-sass": "commander-gulp-watch w-scss \"frontend/src/static/styles/*.scss\" \"frontend/src/static/styles/**/*.scss\" --wscss \"docs/styles/\"",
    "watch-stylus": "commander-gulp-watch w-stylus \"frontend/src/static/styles/*.styl\" \"frontend/src/static/styles/**/*.styl\" --wstyl \"docs/styles/\"",
    "watch-templates": "commander-gulp-watch w-templates \"frontend/src/templates/*.pug\"  \"frontend/src/templates/**/*.pug\" --wt \"docs/\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jugaz/commander-gulp-mailing.git"
  },
  "keywords": [
    "mailing",
    "gulp",
    "commander-gulp-mailing",
    "commander"
  ]
}
